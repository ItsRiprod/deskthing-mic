    "Microphone",
    "Access"
  ],
  "homepage": "https://github.com/ItsRiprod/deskthing-mic#readme",
  "bugs": {
    "url": "https://github.com/ItsRiprod/deskthing-mic/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItsRiprod/deskthing-mic.git"
  },
  "license": "ISC",
  "author": "Riprod",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./utils": "./dist/utils/index.js",
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "utils": [
        "dist/utils/index.d.ts"
      ],
      "*": [
        "dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "node build.mjs",
    "prepublishOnly": "npm run build",
    "release": "node -e \"const t=require('child_process'); const v=process.argv[1]||'patch'; t.execSync('npm version '+v+' -m \"Release v%s\"', {stdio:'inherit'});\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.3"
